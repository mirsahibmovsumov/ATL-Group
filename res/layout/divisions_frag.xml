<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/consulting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/electronics"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/electronics"
        android:layout_marginTop="24dp"
        android:src="@drawable/consulting_selector" />

    <ImageView
        android:id="@+id/electronics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/engineering"
        android:layout_alignRight="@+id/rentacar"
        android:layout_below="@+id/consulting"
        android:layout_marginTop="20dp"
        android:src="@drawable/electronics_selector" />

    <ImageView
        android:id="@+id/rentacar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/engineering"
        android:layout_below="@+id/electronics"
        android:layout_marginTop="20dp"
        android:src="@drawable/rentacar_selector" />

    <ImageView
        android:id="@+id/engineering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/engineering_selector" />

    <ImageView
        android:id="@+id/infotec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/engineering"
        android:layout_below="@+id/engineering"
        android:layout_marginTop="38dp"
        android:src="@drawable/infotec_selector" />

    <ImageView
        android:id="@+id/audit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/infotec"
        android:layout_below="@+id/infotec"
        android:layout_marginTop="28dp"
        android:src="@drawable/audit_selector" />

</RelativeLayout>